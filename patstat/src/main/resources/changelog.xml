<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
    <changeSet id="1" author="jpc">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="customers"/>
            </not>
        </preConditions>

        <!-- customers -->
        <createTable tableName="customers">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="run_id" type="varchar(64)">
                <constraints nullable="false" uniqueConstraintName="uk_customer_run_id" unique="true"/>
            </column>
            <column name="active" type="boolean" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="small_ecosim" type="boolean" defaultValue="false">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addAutoIncrement tableName="customers" columnName="id" columnDataType="bigint" startWith="1" incrementBy="1"/>

        <!-- users -->
        <createTable tableName="users">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="customer_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_user_customer_id" referencedTableName="customers" referencedColumnNames="id"/>
            </column>
            <column name="manager1_id" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="manager2_id" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="language" type="varchar(2)" defaultValue="en">
                <constraints nullable="false"/>
            </column>
            <column name="username" type="varchar(64)"/>
            <column name="password" type="varchar(255)"/>
            <column name="company_representative" type="boolean" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="male" type="boolean" defaultValue="false">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addAutoIncrement tableName="users" columnName="id" columnDataType="bigint" startWith="1" incrementBy="1"/>
        <addForeignKeyConstraint constraintName="fk_user_manager1_id" baseTableName="users" baseColumnNames="manager1_id" referencedTableName="users" referencedColumnNames="id"/>
        <addForeignKeyConstraint constraintName="fk_user_manager2_id" baseTableName="users" baseColumnNames="manager2_id" referencedTableName="users" referencedColumnNames="id"/>

        <!-- user roles -->
        <createTable tableName="user_roles">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_user_roles_user_id" referencedTableName="users" referencedColumnNames="id"/>
            </column>
            <column name="username" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="varchar(32)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addAutoIncrement tableName="user_roles" columnName="id" columnDataType="bigint" startWith="1" incrementBy="1"/>
        <addUniqueConstraint constraintName="uk_user_passwords_username_role" tableName="user_roles" columnNames="username,role"/>

        <!-- user passwords -->
        <createTable tableName="user_passwords">
            <column name="user_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_user_passwords_user_id" referencedTableName="users" referencedColumnNames="id"/>
            </column>
            <column name="modified" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- sims -->
        <createTable tableName="sims">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="customer_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_sim_customer_id" referencedTableName="customers" referencedColumnNames="id"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="true" foreignKeyName="fk_sim_user_id" referencedTableName="users" referencedColumnNames="id"/>
            </column>
            <column name="line" type="varchar(255)">
                <constraints nullable="false" uniqueConstraintName="uk_sim_line" unique="true"/>
            </column>
            <column name="professional_usage_only" type="boolean" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="muac" type="boolean" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="ranked" type="boolean" defaultValue="false">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addAutoIncrement tableName="sims" columnName="id" columnDataType="bigint" startWith="1" incrementBy="1"/>

    </changeSet>

